{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "An API code base for Node.js + express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/dimaslz/nodejs-express-typescript"
  },
  "author": "Dimas LÃ³pez (dimaslz) <me@dimaslz.io>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/src/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@types/cors": "^2.8.7",
    "axios": "^0.20.0",
    "bcrypt-nodejs": "^0.0.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "lodash": "^4.17.20",
    "lusca": "^1.6.1",
    "mongoose": "^5.10.6",
    "nodemailer": "^6.4.11",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/async": "^3.2.3",
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.12",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.1",
    "@types/connect-mongo": "^3.1.3",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.3",
    "@types/express": "^4.17.8",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.161",
    "@types/lusca": "^1.6.2",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.2",
    "@types/nodemailer": "^6.4.0",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.46",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.9.0",
    "jest": "^26.4.2",
    "mongodb-memory-server": "^6.8.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
